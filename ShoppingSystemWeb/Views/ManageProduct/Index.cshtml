@model ProductViewModel

<form asp-controller="ManageProduct" asp-action="AddProduct">
    <h3>Add Product</h3>
    <label asp-for="Id" class="form-label">Id</label>
    <input asp-for="Id" type="text" class="form-control" id="id" name="Id" placeholder="Enter Id">

    <label asp-for="Title" class="form-label">Title</label>
    <input asp-for="Title" type="text" class="form-control" id="title" name="Title" placeholder="Enter Title">

    <label asp-for="Description" class="form-label">Description</label>
    <input asp-for="Description" type="text" class="form-control" id="description" name="Description" placeholder="Enter Description">

    <label asp-for="Price" class="form-label">Price</label>
    <input asp-for="Price" type="text" class="form-control" id="price" name="Price" placeholder="Enter Price">

    <button type="submit" class="btn btn-primary">Submit</button>
</form>